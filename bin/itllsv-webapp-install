#!/usr/bin/env bash

itllsv-webapp-install() {
    local app_name="$1"
    local url="$2"
    
    local desktop_file="$HOME/.local/share/applications/${app_name}.desktop"
    
cat > "$desktop_file" << EOF
	[Desktop Entry]
	Version=1.0
	Type=Application
	Name=$app_name
	Comment=$app_name
	Exec=google-chrome-stable --app="$url" --class="$app_name" --name="$app_name"
	Icon=/usr/bin/icons$app_name.png
	Terminal=false
	StartupWMClass=webapp-$app_name
	StartupNotify=true
EOF
    
    chmod +x "$desktop_file"
}
